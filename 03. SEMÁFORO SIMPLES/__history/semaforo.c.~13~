// EXEMPLO  03. SEMÁFORO SIMPLES

#include <16f628a.h>
#use delay(clock=400000)
#fuses INTRC_IO,NOWDT,PUT,BROWNOUT,NOLVP,NOMCLR,XT

int8 segmentos[] = {
   0b00111111, 0b00000110, 0b01011011, 0b01001111,
   0b01100110, 0b01101101, 0b01111100, 0b00000111,
   0b01111111, 0b01100111
};

void main () {

   int numero = 0;   
   while (true) { 
      output_b( segmentos[numero] );
      numero++;
      if (numero > 9) {
         numero = 0;
      }
      delay_ms(100);
   }
 if (numero==0){
   output_high(pin_b0); //acende o led vermelho
   output_low(pin_b1); //apaga o led amarelo
   output_low(pin_b2); //apaga o led verde
   delay_ms(6000); //espera 6s
  
    output_low(pin_b0); //apaga o led vermelho
    output_high(pin_b2); //acente o led verde
    delay_ms(4000); //espera 4s
   
     output_low(pin_b2); //apaga o led verde
     output_high(pin_b1); //acente o led amarelo
     delay_ms(3000); //espera 3
     
     output_low(pin_b1);
     output_high(pin_b0);
      }

  //SEGUNDO SEMAFORO b0 = b3// b1 = b4 //e o b2=b5
 
  output_high(pin_a0); //acende o led verde
 output_low(pin_a2); //apaga o led amarelo
 output_low(pin_a1); //apaga o led vermelho
  delay_ms(6000); //espera 6s
  
 output_low(pin_a0); //apaga o led verde
 output_high(pin_a2); //acente o led vermelho
  delay_ms(4000); //espera 4s

 output_low(pin_a2); //apaga o led vermelho
 output_high(pin_a1); //acente o led amarelo
  delay_ms(3000); //espera 3
  
 output_low(pin_a2);
  output_high(pin_a0);
  
}

